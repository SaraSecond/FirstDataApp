@model EFDataApp.Domain.Entities.Product
@{
    ViewBag.Title = "Редактирование товара";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id" enctype="multipart/form-data">
    <input type="hidden" asp-for="ImagePath" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Manufacturer" class="control-label">Производитель</label>
        <input type="text" asp-for="Manufacturer" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Count" class="control-label">Количество</label>
        <input type="number" asp-for="Count" class="form-control" />
    </div>
    <div class="form-group">
        <label class="custom-control-label">Склад</label>
        <select id="StoreId" name="StoreId" class="form-control">
            @*<option selected value="@Model.StoreId" >@Model.Store.Location</option>*@
            @foreach (var item in ViewBag.Stores)
            {
                <option selected=@(Model.Store.Id == item.Id) value="@item.Id">@item.Location</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label class="custom-control-label">Картинка</label>
        <input type="file" name="imagePath" id="imagePath" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
