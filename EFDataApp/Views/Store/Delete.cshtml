@model EFDataApp.Domain.Entities.Store
@{
    ViewBag.Title = "Удаление склада";
}

<div>
    <dl class="dl-horizontal">
        <dt>№</dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>Производитель</dt>
        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>Заполненность</dt>
        <dd>
            @Html.DisplayFor(model => model.Products.Count)
        </dd>
    </dl>

    <div>
        @if (Model.Products.Count == 0)
        {
            <form asp-controller="Store" asp-action="Delete" method="post">
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Удалить" />
                </div>
            </form>
        }
            else
            {
            <h3>Cклад не пуст, удаление не разрешено</h3>
            }

    </div>
</div>
