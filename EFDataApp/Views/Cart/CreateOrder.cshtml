@model Order
@{
    ViewBag.Title = "Заказ";
}

<h2 class="m-3">Детали Заказа</h2>

<form asp-action="CreateOrder" method="post" class="m-4">
    <div class="form-group">
        <label>Имя:</label>
        <input asp-for="CustomerName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Адрес:</label>
        <input asp-for="Adress" class="form-control" />
    </div>
    <div class="form-group">
        <label>Телефон:</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="text-center m-2">
        <button type="submit" class="btn btn-primary">Отправить</button>
        <a asp-action="Index" asp-route-returnUrl="@ViewBag.returnUrl" class="btn btn-secondary">Отменить</a>
    </div>
</form>