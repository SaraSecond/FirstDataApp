@model EFDataApp.Domain.Entities.Product
@{
    ViewBag.Title = "Добавление пользователя";
}
<form asp-action="create" asp-controller="home" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input list="namesList" type="text" asp-for="Name" class="form-control" size="10" placeholder="Nane" />
    </div>
    <div class="form-group">
        <label asp-for="Manufacturer" class="control-label">Производитель</label>
        <input type="text" asp-for="Manufacturer" class="form-control" size="10" placeholder="Manufacturer" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="text" asp-for="Price" class="form-control" size="10" placeholder="Price" />
    </div>
    <div class="form-group">
        <label asp-for="Count" class="control-label">Цена</label>
        <input type="number" asp-for="Count" class="form-control" size="10" placeholder="Count" />
    </div>
    <div class="form-group">
        <label class="custom-control-label">Склад</label>
        <select id="StoreId" name="StoreId" class="form-control">
            <option disabled selected>Склад</option>
            @foreach (var item in ViewBag.Stores)
            {
                <option value="@item.Id">@item.Location</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label class="custom-control-label">Картинка</label>
        <input type="file" name="imagePath" id="imagePath" />
            @*<div>
                <img class="img-fluid" src="~/images/@Model.ImagePath" />
            </div>*@
    </div>
    
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
        <input type="reset" value="Отмена" class="btn btn-secondary" />
    </div>
</form>
<datalist id="namesList">
    <option value="Fen" label="256" />
    <option value="Sara">056</option>
    <option value="Kiss" />
</datalist>


